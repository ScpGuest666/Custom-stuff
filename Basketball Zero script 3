-- Add New Dunk Button (Positioned below Pattern)
local dunkButton = Instance.new("TextButton", settingsGui)
dunkButton.Name = "DunkButton" -- Assign a name
dunkButton.Size = UDim2.new(0, 160, 0, 30)
dunkButton.Position = UDim2.new(0, 20, 0, 240) -- Y=240 (Below pattern button)
dunkButton.Text = "Dunk: Off"
dunkButton.TextScaled = true
dunkButton.BackgroundColor3 = Color3.new(1, 0, 0)

-- *** NEW: Update the dunk toggle button ***
dunkButton.MouseButton1Click:Connect(function()
    dunkEnabled = not dunkEnabled
    dunkButton.Text = "Dunk: " .. (dunkEnabled and "On" or "Off")
    dunkButton.BackgroundColor3 = dunkEnabled and Color3.new(0, 1, 0) or Color3.new(1, 0, 0)

    if dunkEnabled then
        pcall(function() -- Wrap in pcall for safety
            createDunkPlatforms()
            -- Start collision management for all platforms
            for _, platformData in ipairs(homePlatforms) do
                if platformData.Instance then -- Check if platform was successfully created
                    managePlatformCollision(platformData)
                end
            end
            for _, platformData in ipairs(awayPlatforms) do
                 if platformData.Instance then -- Check if platform was successfully created
                    managePlatformCollision(platformData)
                 end
            end
        end)
    else
        stopAllCollisionChecks() -- Stop collision checks *before* destroying platforms
        -- Destroy platforms when dunk is disabled
        for _, platformData in ipairs(homePlatforms) do
            if platformData.Instance and platformData.Instance.Parent then -- Check if instance exists before destroying
                platformData.Instance:Destroy()
            end
             platformData.Instance = nil -- Clear references regardless
             platformData.TouchDetector = nil
        end
        for _, platformData in ipairs(awayPlatforms) do
            if platformData.Instance and platformData.Instance.Parent then -- Check if instance exists before destroying
                platformData.Instance:Destroy()
            end
             platformData.Instance = nil -- Clear references regardless
             platformData.TouchDetector = nil
        end
        -- Reset cooldown if dunk is disabled
        cooldownActive = false
        if countdownLabel then
            countdownLabel.Visible = false
            countdownLabel.Text = ""
        end
    end
end)


-- Add Surround Threshold Label (Positioned below Dunk)
